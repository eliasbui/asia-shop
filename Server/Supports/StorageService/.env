# AsiaShop Storage Service - Environment Configuration
# ================================
# Application Configuration
# ================================
APP_ENV=development
PORT=8080
APP_VERSION=1.0.0

# ================================
# Database Configuration (MySQL)
# ================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=apiuser
DB_PASSWORD=apipassword
DB_NAME=storage_service

# ================================
# MinIO Storage Configuration
# ================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=files
MINIO_REGION=us-east-1

# ================================
# JWT Authentication Configuration
# ================================
JWT_JWKS_CACHE_TTL=1h

JWT_JWKS_TIMEOUT=10s

JWT_CLOCK_SKEW=5m

# ================================
# Rate Limiting Configuration
# ================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=10
RATE_LIMIT_ENABLE_REDIS=false
RATE_LIMIT_USER_BASED_LIMIT=true

# ================================
# Logging Configuration
# ================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT_FILE=logs/app.log
LOG_OUTPUT_CONSOLE=true
LOG_MAX_SIZE=100
LOG_MAX_AGE=30
LOG_MAX_BACKUPS=5
LOG_COMPRESS=true
